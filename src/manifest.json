{
    "manifest_version": 2,
    "name": "Vocabulary.com Enhancer (unofficial)",
    "author": "Thor Galle",
    "version": "0.4.0",
    "description": "Show translations in the word game. Right-click add selected words.",
    "icons": {
        "16": "icons/favicon-16x16.png",
        "32": "icons/favicon-32x32.png",
        "75": "icons/opengraph-75x75.gif",
        "114": "icons/favicon-114x114.png",
        "128": "icons/favicon-128x128.png"
    },
    "background": {
        "scripts": ["api/vocabulary-api.js", "background.js"]
        // #ifdef CHROME
        , "persistent": true
        // #endif
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["content/voc-adder.js"],
        "css": ["content/styles.css"]
    }, {
        "matches": ["*://*.vocabulary.com/*"],
        "js": ["content/misc.js"]
    },{
        "matches": ["*://*.vocabulary.com/", "*://*.vocabulary.com/play/", "*://www.vocabulary.com/lists/*/practice"],
        "js": ["api/languages.js", "api/google-translate.js", 
            "content/element-creator.js", "content/quiz-injector.js", "content/common.js"],
        "css": ["content/styles.css"]
    }, {
        "matches": ["*://*.vocabulary.com/dictionary/*"],
        "js": ["api/languages.js", "api/google-translate.js", 
            "content/element-creator.js", "content/definition-injector.js", "content/common.js"],
        "css": ["content/styles.css"]
    }, {
        "matches": ["*://*.vocabulary.com/lists/*"],
        "js": ["api/languages.js", "api/google-translate.js", 
            "content/element-creator.js", "content/list-injector.js", "content/common.js"],
        "css": ["content/styles.css"]
    }
    ],
    "permissions": [
        "contextMenus",
        "activeTab",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "notifications",
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        "icons/*"
    ]
}
