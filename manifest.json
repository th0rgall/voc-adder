{
    "manifest_version": 2,
    "name": "Voc.com adder",
    "version": "0.2.0",
    "description": "Add selected words to your vocabulary.com lists.",
    "background": {
        "scripts": ["vocabulary-api.js", "background.js"]
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["content.js"]
    }],
    "permissions": [
        "contextMenus",
        "activeTab",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "notifications",
        "http://*/*",
        "https://*/*"
    ]
}
